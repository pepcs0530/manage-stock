<html>

<head>

</head>

<body style="padding:30px;">
  <table style="width:100%">
    <thead>
      <tr>
        <th colspan="1" style="width:20%">
          <img src="/api/pdf/logo" style="height:120px;">
        </th>
        <th colspan="4" style="padding:5px">
          <h2 style="text-align:left">ธงชัยพันธุ์ข้าว</h2>
          <h3 style="text-align:left">111 ม.3 ต.สระยายโสม อ.อู่ท่อง จ.สุพรรณบุรี 72220 </h3>
          <h3 style="text-align:left">โทร(035)55-774, 081-9420182</h3>
        </th>
      </tr>
      <tr>
        <th colspan="5">
          <h2 class="btn">ใบเสร็จรับเงิน</h2>
        </th>
      </tr>
      <tr>
        <td colspan="5" style="text-align: right;">วันที่
          <%= date %>
        </td>
      </tr>
      <tr>
        <td colspan="5" style="text-align: right;">เลขที่ใบเสร็จ
          <%= receiptNo %>
        </td>
      </tr>
      <tr>
        <td colspan="5">
          &nbsp;
        </td>
      </tr>
      <tr>
        <td colspan="3" style="width:50%">ชื่อนาม-สกุล
          <%= customer.customer_name %>
        </td>
        <td colspan="2" style="width:30%;text-align: right;">เบอร์โทรศัพท์
          <%= customer.customer_phone %>
        </td>
        <!-- <td colspan="1" style="width:20%">วันที่
          <%= date %>
        </td> -->
      </tr>
      <tr>
        <td colspan="5">ที่อยู่
          <%= customer.customer_address %>
        </td>

      </tr>

    </thead>
    <tbody>

      <table border="1" cellspacing="0" style="width:100%">
        <thead>
          <tr>
            <th style="width:5px">ลำดับ</th>
            <th style="width:45%">ราการสินค้า</th>
            <th style="width:15%">จำนวนหน่วย</th>
            <th style="width:15%">ราคาต่อหน่วย</th>
            <th style="width:20%">จำนวนเงิน</th>
          </tr>
        </thead>
        <tbody>
          <% itemList.forEach(function(item,index) { %>
          <tr style="height:30px">
            <td style="text-align:center">
              <%= index +1%>
            </td>
            <td>
              <%= item.name %>
            </td>
            <td style="text-align:right">
              <%= item.quantity %>
            </td>
            <td style="text-align:right">
              <%= item.price %>
            </td>
            <td style="text-align:right">
              <%= item.quantity*item.price %>
            </td>
          </tr>
          <% }); %>
          <tr>
            <td colspan="5" style="height:<%= 22*22 - itemList.length*22 %>px;"></td>
          </tr>
        </tbody>
        <tfoot>
          <tr>
            <td colspan="3"></td>
            <th colspan="1" style="text-align: right">ยอดรวม </th>
            <td colspan="1" style="text-align: right">
              <%= totalPrice%>
            </td>
          </tr>
          <tr>
            <td colspan="3"></td>
            <th colspan="1" style="text-align: right">ส่วนลด </th>
            <td colspan="1" style="text-align: right">
              <%= discount%>
            </td>
          </tr>
          <tr>
            <!-- <th colspan="2">จำนวนรวมเงินทั้งสิ้น</th>
            <th colspan="1"></th> -->
            <th colspan="3">จำนวนรวมเงินทั้งสิ้น</th>
            <th colspan="1" style="text-align: right">ยอดรวมสุทธิ</th>
            <td colspan="1" style="text-align: right">
              <%= totalPrice - discount%>
            </td>
          </tr>
        </tfoot>
      </table>


    </tbody>
    <tfoot>
      <br />
      <br />
      <table style="width: 100%">
        <tfoot>
          <tr>
            <td style="width:50%;padding-top:15px;">ผู้จ่ายเงิน......................................................</td>
            <td style="width:50%;padding-top:15px;">ผู้รับเงิน......................................................</td>
          </tr>

          <tr>
            <td style="width:50%;padding-top:15px;">วันที่จ่ายเงิน.................................................</td>
            <td style="width:50%;padding-top:15px;">วันที่รับเงิน.................................................</td>
          </tr>
        </tfoot>
      </table>

    </tfoot>
  </table>
</body>

</html>

<script>
  function numberWithCommas(x) {
    return x.toString().replace(/\B(?=(\d{3})+(?!\d))/g, ",");
  }

</script>
